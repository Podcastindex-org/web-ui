{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "$ref": "#/definitions/App"
  },
  "definitions": {
    "App": {
      "type": "object",
      "title": "App or Service",
      "additionalProperties": false,
      "required": [
        "appName",
        "appType",
        "appIconUrl",
        "appUrl",
        "platforms",
        "supportedElements"
      ],
      "properties": {
        "appName": {
          "type": "string"
        },
        "appType": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "app",
              "hosting",
              "directory",
              "browser extension",
              "wordpress plugin",
              "website",
              "social links",
              "node hosting",
              "podcast player",
              "music player",
              "video",
              "blockchain",
              "podcaster wallet",
              "open source",
              "other",
              "chat bot",
              "rss proxy",
	          "self-hosted"
            ]
          }
        },
        "appUrl": {
          "type": "string",
          "format": "uri"
        },
        "appIconUrl": {
          "type": "string",
          "description": "Filename of png or jpg in assets folder"
        },
        "platforms": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "Web",
              "Mobile",
              "iOS",
              "iPad OS",
              "Android",
              "F-Droid",
              "macOS",
              "Windows",
              "Linux",
              "BSD",
              "KaiOS",
              "Chrome",
              "Wordpress",
              "N/A",
              "AmigaOS 4",
              "Sailfish OS",
              "Umbrel",
              "Start9",
              "Citadel",
              "Hive",
              "Discord",
              "Fediverse",
              "Cloud Phone"
            ]
          }
        },
        "supportedElements": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/SupportedElement"
          }
        },
        "tagLine": {
          "type": "string"
        }
      }
    },
    "SupportedElement": {
      "type": "object",
      "title": "Supported Element",
      "additionalProperties": true,
      "properties": {
        "elementName": {
          "type": "string",
          "enum": [
            "Transcript",
            "Locked",
            "Funding",
            "Chapters",
            "Search",
            "Season",
            "Episode",
            "Soundbite",
            "Location",
            "Person",
            "Value",
            "Boostagrams",
            "Sat Streaming",
            "Video",
            "Podping",
            "Alternate Enclosure",
            "Trailer",
            "GUID",
            "Medium",
            "Live",
            "Live Boosts",
            "Block",
            "Social Interact",
            "OP3",
            "Images",
            "License",
            "Txt",
            "Wallet Switching (VTS)",
            "Podroll",
            "Update Frequency",
            "Chat",
            "Publisher",
            "Content Link",
            "Remote Item",
            "Image"
          ]
        },
        "elementURL": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": [
        "elementName"
      ]
    }
  }
}
