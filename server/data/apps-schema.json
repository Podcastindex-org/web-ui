{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "$ref": "#/definitions/App"
  },
  "definitions": {
    "App": {
      "type": "object",
      "title": "App or Service",
      "additionalProperties": false,
      "required": [
        "appName",
        "appType",
        "appIconUrl",
        "appUrl",
        "platforms",
        "supportedElements"
      ],
      "properties": {
        "appName": {
          "type": "string"
        },
        "appType": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "app",
              "hosting",
              "directory",
              "browser extension",
              "wordpress plugin",
              "website",
              "social links",
              "node hosting",
              "podcast player",
              "video",
              "sn-network",
              "blockchain",
              "open source",
              "other"
            ]
          }
        },
        "appUrl": {
          "type": "string",
          "format": "uri"
        },
        "appIconUrl": {
          "type": "string",
          "description": "Filename of png or jpg in assets folder"
        },
        "platforms": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "Web",
              "Mobile",
              "iOS",
              "Android",
              "macOS",
              "Windows",
              "Linux",
              "BSD",
              "KaiOS",
              "Chrome",
              "Wordpress",
              "N/A",
              "AmigaOS 4",
              "Sailfish OS",
              "Umbrel",
              "Citadel",
              "Hive"
            ]
          }
        },
        "supportedElements": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/SupportedElement"
          }
        },
        "tagLine": {
          "type": "string"
        }
      }
    },
    "SupportedElement": {
      "type": "object",
      "title": "Supported Element",
      "additionalProperties": true,
      "properties": {
        "elementName": {
          "type": "string",
          "enum": [
            "Transcript",
            "Locked",
            "Funding",
            "Chapters",
            "Search",
            "Season",
            "Episode",
            "Soundbite",
            "Location",
            "Person",
            "Sn-Network",
            "Value (Other)",
            "Value (Boostagrams)",
            "Value (SAT Streaming)",
            "Video",
            "Synchronize",
            "Podping",
            "Alternate Enclosure",
            "Trailer",
            "GUID"
          ]
        },
        "elementURL": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": [
        "elementName"
      ]
    }
  }
}
